<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:background="@color/colorWHITE2"
    android:id="@+id/subtitle"
        android:textSize="35dp"
        android:gravity="center"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="80dp"
        />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/skiptotime"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:layout_width="match_parent"
        android:id="@+id/bottom1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp"
        android:background="@color/colorGRAY"
        />
    <Button
        android:background="@color/colorWHITE2"
        android:id="@+id/subsecond"
        android:layout_width="50dp"
        app:layout_constraintLeft_toLeftOf="@id/bottom1"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:layout_height="30dp"
        android:text="-0.5s"/>

    <EditText
        android:background="@color/colorWHITE2"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:id="@+id/skiptotime"
        app:layout_constraintLeft_toRightOf="@id/subsecond"
        android:layout_width="67dp"
        android:maxLines="1"
        android:textColor="@color/colorWHITE"
        android:textSize="30dp"
        android:inputType="time"
        android:gravity="center"
        android:layout_height="30dp"/>
    <Button
        android:background="@color/colorWHITE2"
        android:id="@+id/addsecond"
        app:layout_constraintLeft_toRightOf="@id/skiptotime"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="+0.5s"/>
</androidx.constraintlayout.widget.ConstraintLayout>
