<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/subtitle"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/skiptotime"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:layout_width="match_parent"
        android:textColor="@color/colorWHITE"
        android:id="@+id/bottom1"
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp"
        android:background="@color/colorGRAY"
        />




    <EditText
        android:id="@+id/skiptotime"
        android:background="@color/colorWHITE2"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintLeft_toLeftOf="@id/bottom1"
        android:layout_width="74dp"
        android:inputType="time"
        android:maxLines="1"
        android:textColor="@color/colorBLACK"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/hint1"
        android:background="@color/colorBLACK"
        android:textColor="@color/colorWHITE"
        android:text="点击这里跳转"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintLeft_toLeftOf="@id/bottom1"
        android:layout_width="74dp"
        android:layout_height="11dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="8dp"/>

    <TextView
        android:id="@+id/hint2"
        android:background="@color/colorBLACK"
        android:textColor="@color/colorWHITE"
        android:text="暂停后5秒内可跳转"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintLeft_toLeftOf="@id/bottom1"
        android:layout_width="74dp"
        android:layout_height="11dp"
        android:gravity="center"
        android:textSize="8dp"/>

    <Button
        android:id="@+id/subsecond"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        app:layout_constraintLeft_toRightOf="@id/skiptotime"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:text="-0.5s"/>

    <Button
        android:id="@+id/addsecond"
        app:layout_constraintLeft_toRightOf="@id/subsecond"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:layout_width="74dp"
        android:layout_height="40dp"
        android:text="+0.5s"/>
    <Button
        android:id="@+id/shield"
        android:layout_width="64dp"
        app:layout_constraintLeft_toRightOf="@id/addsecond"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:layout_height="40dp"
        android:text="遮挡"/>
</androidx.constraintlayout.widget.ConstraintLayout>
